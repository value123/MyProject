<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.itotem.view.gustureimage.GestureImageView
        xmlns:gesture-image="http://schemas.itotem.com/android"
        android:id="@+id/imageView_gusture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerInside"
        gesture-image:max-scale="2.0"
        gesture-image:min-scale="0.75" />

    <ImageView
        android:id="@+id/imageView_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/loading_bg_200_300" />

</RelativeLayout>